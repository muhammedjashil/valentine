<script>
  function moveNo() {
    const noBtn = document.getElementById("no");
    const x = Math.random() * 220;
    const y = Math.random() * 80;
    noBtn.style.left = x + "px";
    noBtn.style.top = y + "px";
  }

  function yesClick() {
    document.getElementById("msg").innerHTML =
      "üíñ Yay! I knew it üòç";
  }
